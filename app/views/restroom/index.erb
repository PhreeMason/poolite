<h1><%= @restroom.restaurant_name%></h1>

<% if !@restroom.reviews? %>
  <% for item in @restroom.reviews %>
    <a href="review/<%=item.id%>">
      <div class="">
        <h4><%=item.body%></h4>
      </div>
    </a>
  <% end %>
<% else %>
  <h3>This restroom hasn't been reviewed yet! You can be the first to review it <a href="restroom/<%=@restroom.id%>/review">here</a></h3>
<% end %>

<a href="/logout">Log out</a>
